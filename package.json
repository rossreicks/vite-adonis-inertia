{
  "name": "vite-adonis-inertia",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "run-p ace:serve vite:serve",
    "ace:serve": "node ace serve --watch",
    "vite:serve": "vite --host --port 3000",
    "vite:build": "vite build",
    "build": "run-s vite:build ace:build",
    "ace:build": "node ace build --production",
    "start": "node server.js",
    "test": "node ace test",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.6",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "2.5.1",
    "@types/proxy-addr": "^2.0.3",
    "@types/source-map-support": "^0.5.10",
    "@vitejs/plugin-react": "^4.2.0",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.1",
    "laravel-vite-plugin": "^0.8.1",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.1.0",
    "typescript": "~4.6",
    "vite": "^4.0.0",
    "youch": "^3.3.3",
    "youch-terminal": "^2.2.3"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/core": "^5.8.0",
    "@adonisjs/lucid": "^18.4.2",
    "@adonisjs/session": "^6.4.0",
    "@adonisjs/view": "^6.2.0",
    "@eidellev/inertia-adonisjs": "^8.1.0",
    "@inertiajs/react": "^1.0.14",
    "@types/react": "^18.2.41",
    "@types/react-dom": "^18.2.17",
    "luxon": "^3.4.4",
    "mysql2": "^3.6.5",
    "proxy-addr": "^2.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "webpack-node-externals": "^3.0.0"
  }
}
