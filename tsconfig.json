{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "ace.cjs"
  ],
  "compilerOptions": {
    "outDir": "build",
    "isolatedModules": true,
    "rootDir": "./",
    "sourceMap": true,
    "jsx": "react-jsx",
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/view",
      "@adonisjs/session",
      "@eidellev/inertia-adonisjs",
      "@adonisjs/lucid",
      "@adonisjs/auth",
    ]
  }
}
